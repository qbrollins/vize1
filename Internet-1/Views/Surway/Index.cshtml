@{
    Layout = "_LayoutAdmin";
}
@section CardHeader{
    <span>Anket</span>
}
@model             List<Internet_1.ViewModels.SurwayModel>

<a asp-action="Add" asp-controller="Surway" class="btn btn-primary btn-sm mb-2">Ekle</a>

@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">Henüz Ürün Eklenmedi!</div>
}
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Adı</td>
            <td>Fiyatı</td>
            <td>Durumu</td>
            <th>Eklenme</th>
            <th>Güncellenme</th>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var Surway in Model)
        {
            <tr>
                <td>@Surway.Id</td>
                <td>@Surway.Name</td>
                <td>@Surway.Price</td>
                <td>
                    @if (Surway.IsActive)
                    {
                        <span class="badge bg-success text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Pasif</span>
                    }


                </td>
                <td>@Surway.Created</td>
                <td>@Surway.Updated</td>
                <td>
                    <a asp-action="Update" asp-controller="Surway" class="btn btn-primary btn-sm" asp-route-id="@Surway.Id">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Surway" class="btn btn-danger btn-sm" asp-route-id="@Surway.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

