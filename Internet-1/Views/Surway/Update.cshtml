@{
    Layout = "_LayoutAdmin";
}
@model             Internet_1.ViewModels.SurwayModel
@section CardHeader{
    <span>Anket Düzenle</span>
}


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Surway" asp-action="Update" method="post">

            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="mb-2">
                <label asp-for="SurwayQuestionsId"> </label>
                <select asp-for="SurwayQuestionsId" class="form-control" asp-items="@ViewBag.SurwayQuestions">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-2">

                <input asp-for="IsActive" class="form-check-inline" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
